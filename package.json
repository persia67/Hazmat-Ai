    "vite": "^5.2.0"
  },
  "dependencies": {
    "@google/genai": "^1.34.0",
    "lucide-react": "^0.562.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "build": {
    "appId": "com.hazmatai.app",
    "productName": "HazmatAI",
    "directories": {
