
{
  "name": "hazmatai",
  "private": true,
  "version": "2.6.0",
  "description": "HazmatAI - Persian Chemical Safety Analyzer",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "vite",
    "build": "tsc && vite build",
